<core:FragmentDefinition xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:t="sap.ui.table">
	<Table id="diasAdicionalesList" inset="false" fixedLayout="false" items="{ path: '/diasVentaSet', sorter: { path: 'Begda' } }"
		backgroundDesign="Transparent" noDataText="{i18n>detailLineItemTableNoDataText}" class="sapUiResponsiveMargin"
		updateFinished="onListUpdateFinishedDiasAdicionales">
		<headerToolbar>
			<Toolbar id="tbDiasAdic">
				<Title id="tituloDiasAdic" text="{i18n>diasAdicionalesTabla}"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column hAlign="Center">
				<Label text="{i18n>Begda} Período"/>
			</Column>
			<Column hAlign="Center">
				<Label text="{i18n>Endda} Período"/>
				<footer hAlign="Right">
					<Label text="Total"/>
				</footer>
			</Column>
			<Column hAlign="Right">
				<Label text="{i18n>Anzhl}"/>
				<footer hAlign="Right">
					<Label text="{diasAdicionales>/sumAnzhl}"/>
				</footer>
			</Column>
			<Column hAlign="Right">
				<Label text="{i18n>Kverb}"/>
				<footer hAlign="Right">
					<Label text="{diasAdicionales>/sumKverb}"/>
				</footer>
			</Column>
			<Column hAlign="Right">
				<Label text="{i18n>Venta}"/>
				<footer hAlign="Right">
					<Label text="{diasAdicionales>/sumVenta}"/>
				</footer>
			</Column>
			<Column hAlign="Right">
				<Label text="{i18n>Dispo}"/>
				<footer hAlign="Right">
					<Label text="{diasAdicionales>/sumDispo}"/>
				</footer>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{parts: ['Begda'], formatter: '.formatter.fecha'}"/>
					<Text text="{parts: ['Endda'], formatter: '.formatter.fecha'}"/>
					<Text text="{Anzhl}"/>
					<Text text="{Kverb}"/>
					<Text text="{Venta}"/>
					<Text text="{Dispo}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<f:SimpleForm class="editableForm" columnsL="1" columnsM="1" editable="true" emptySpanL="4" emptySpanM="4" id="frmDiasAdic"
		labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout" maxContainerCols="1" minWidth="1024">
		<f:content>
			<Label text="{i18n>diasAdicionalesSolicitar}" required="false"/>
			<Input name="FadCo" id="FadCo_id" valueLiveUpdate="true" liveChange="_validateSaveEnablement" enabled="true" visible="true" maxLength="2"
				value="{ path: 'FadCo', type: 'sap.ui.model.odata.type.Byte' }"/>
			<Label text="{i18n>diasAdicionalesVender}" required="false"/>
			<Input name="FadVe" id="FadVe_id" valueLiveUpdate="true" liveChange="_validateSaveEnablement" enabled="true" visible="true" maxLength="2"
				value="{ path: 'FadVe', type: 'sap.ui.model.odata.type.Byte' }"/>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>
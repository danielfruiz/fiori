			<t:Table id="lineItemsList" rows="{path: 'toMaestroBGV'}" title="{i18n>bgvTitulo}" busyIndicatorDelay="{detailView>/lineItemTableDelay}"
				selectionMode="None" editable="false" visibleRowCountMode="Fixed" visibleRowCount="5" minAutoRowCount="0">
				<t:columns>
					<t:Column>
						<Label text="{i18n>Begda} Período"/>
						<t:template>
							<Text text="{parts: ['Begda'], formatter: '.formatter.fecha'}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="{i18n>Endda} Período"/>
						<t:template>
							<Text text="{parts: ['Endda'], formatter: '.formatter.fecha'}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="{i18n>Vname}"/>
						<t:template>
							<Text text="{Vname}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<Label text="{i18n>Fbono}"/>
						<t:template>
							<CheckBox editable="false" selected="{parts: ['Fbono'], formatter: '.formatter.booleanoTrueFalse'}"/>
